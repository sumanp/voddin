
<div id="login-page" class="row">
    <div class="col s12 z-depth-1 card-panel">

        <%= form_for(resource, as: resource_name, class: "login-form",url: session_path(resource_name)) do |f| %>
          <div class="row">
            <div class="input-field col s12 center">
              <h5 class="center login-form-text">Login</h5>
            </div>
          </div>

          <div class="row margin">
            <div class="input-field col s12">
              <i class="mdi-social-person-outline prefix"></i>
              <%= f.label :email %><br />
              <%= f.email_field :email, class: "form-control", autofocus: true %>
            </div>
          </div>

          <div class="row margin">
            <div class="input-field col s12">
              <i class="mdi-action-lock-outline prefix"></i>
              <%= f.label :password %><br />
              <%= f.password_field :password, class: "form-control", autocomplete: "off" %>
            </div>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="row">         
              <div class="input-field col s12 m12 l12  login-text">

                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            </div>
          <% end -%>

          <div class="row">
            <div class="input-field col s12 center-align">
              <%= f.submit "Log in", class: "btn btn-large btn-primary btn-block"%>
            </div>
          </div>
        <% end %>

        <div class="row">
          <%= render "devise/shared/links" %>
        </div>
  </div>
</div>


        
  

