<div class="row">
   <p class="right-align"> <%= link_to 'New Project', new_project_path, class: "waves-effect waves-light btn" %> </p>

  <div class="col s12 z-depth-1 card-panel">
    <br>
    <h5 class="center-align">YOUR PROJECTS</h5>

    <table class="striped">
      <thead>
        <tr>
          <th data-field="id">Project ID</th>
          <th data-field="title">Title</th>
        <% if current_user.admin? %>
          <th data-field="name">User</th>
        <% end %>
          
          
        </tr>
      </thead>

      <tbody>
      
        <% @projects.each do |project| %>
          <tr> 
          <% if can? :show, project %>
            <td>V<%= project.id %></td>
            <td><%= link_to "#{project.title}", project %></td>
            <% if current_user.admin? %>
              <td><%= project.user_id %></td>
              <td>
              <%= link_to 'Delete', project, method: :delete, data: { confirm: 'Are you sure?' } %>
            </td>
            <% else %>

            <% end %>
            

          <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>

    
    
    
  </div>
</div>

