<%= tinymce_assets %>
<div class="row">
  <div class="col s12 z-depth-1 card-panel">
    
      <br>
      <ul class="tabs">
        <li class="tab col s3"><a class="active" href="#info">Info</a></li>
        <li class="tab col s3"><a href="#tasks">Tasks</a></li>
        <li class="tab col s3"><a href="#attachments">Notes</a></li>
      </ul>
    


    <div id="info" class="col s12">

        <% if !flash[:notice].blank? %>
           <div class = "alert alert-info">
              <%= flash[:notice] %>
           </div>
        <% end %>
      
        <h5>
          V<%= @project.id %> | <%= @project.title %>
        </h5>

        <p>
          Description:
          <%= @project.description.html_safe %>
        </p>
        <p>
          Start Date:
          <%= @project.start_date.to_date.strftime('%d/%m/%Y') %>
        </p>

        <p>
          End Date:
          <%= @project.end_date.to_date.strftime('%d/%m/%Y') %>
        </p>

        <p>
          <i class="material-icons tiny">attachment</i>
          <% @project.attachments.each do |attachment| %>
            <%= link_to "#{attachment.file.filename}", attachment.url %> |
          <% end %>
        </p>
        
    </div>

  

    <div id="tasks" class="col s12">
      <h5>Task for this project</h5><br>
        <ul class="collection">
          <% @project.tasks.each do |task| %>
          <li class="collection-item">
            <%= check_box_tag "task_done_#{task.id}","", task.done, class: "task_done filled-in", disabled: "disabled" %>
            <%= label_tag "task_done_#{task.id}", "" %>
            <% if task.done == true %>
       <strike><%= link_to task.title, task %></strike>
            <% else %>
              <%= link_to task.title, task %>
            <% end %>
            
          </li>
          <% end %>
        <ul>
    </div>

    <div id="attachments" class="col s12">
      <h5>Notes & Attachments</h5><br>
      <div id="notes_wrapper">
        <%= render @project.notes %>

      </div>

    </div>

  </div>

</div>
<div class=" row project-meta">
  <p class="col s6">Project Created: <%= time_ago_in_words(@project.created_at) %> ago </p>

  <p class=" col s6 right-align">
    <% if can? :update, @project %>
      <%= link_to 'Edit', edit_project_path(@project) %>
      <% end %> |
      <%= link_to 'Back', projects_path %> 
  </p>
</div>





<!-- Modal Trigger -->
  <div class="fixed-action-btn" style="bottom: 45px; right: 24px;">
    <a class="waves-effect waves-light btn-floating btn-large modal-trigger orange accent-4" href="#modal1">
      <i class="large material-icons">attach_file</i>
    </a>
  </div>

  <!-- Modal Structure -->
  <div id="modal1" class="modal">
    <div class="modal-content">
      <p><%= render "notes/form" %></p>
    </div>
    <div class="modal-footer">
      <a href="#!" class=" modal-action modal-close waves-effect waves-green btn-flat">Close</a>
    </div>
  </div>



